<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_top_margin"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/selection_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selection_prompt"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/selection_prompt">

        <Button
            android:layout_gravity="center"
            android:id="@+id/new_user_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/selection_yes"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="16dp"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/returning_user_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/selection_no_unsure"
            android:textSize="@dimen/text_size"
            android:layout_toRightOf="@id/new_user_button"
            />
    </RelativeLayout>

</RelativeLayout>
